<wi type="G" value="1909,15,">sobre</wi>
<wi type="G" value="3588,16,"><wi type="G" value="5207,17,">el Hijo</wi></wi>
<wi type="G" value="3588,18,"><wi type="G" value="444,19,">del Hombre</wi></wi>,
