<wi type="G" value="4017,3,">al mirar alrededor</wi>,
<wi type="G" value="3765,4,">ya</wi>
<wi type="G" value="3762,5,">no</wi>
<wi type="G" value="1492,6,">vieron</wi>
<wi type="GC" value="5">a nadie</wi> más,
<wi type="G" value="235,7,">sino</wi> a
