<wi type="G" value="1722,21,">en</wi>
<wi type="G" value="5129,24,">este</wi>
<wi type="G" value="3588,22,"><wi type="G" value="444,23,">hombre</wi></wi>
<wi type="G" value="3739,26,">respecto a</wi>
<wi type="G" value="2596,28,">lo que</wi>
<wi type="G" value="846,29,">lo</wi>
<wi type="G" value="2723,27,">acusan</wi>. </t>
</sv>
