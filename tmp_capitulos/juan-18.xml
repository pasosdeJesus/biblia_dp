«<wi type="G" value="3754,5,"/><wi type="G" value="1473,6,">YO</wi>
<wi type="G" value="1510,7,">SOY</wi>»,
<wi type="G" value="1519,9,"/><wi type="G" value="3588,10,"/><wi type="G" value="565,8,"><wi type="G" value="3694,11,">retrocedieron</wi></wi>
