<wi type="G" value="3303,2,">de hecho</wi>,
<wi type="G" value="4012,1,">respecto a</wi>
<wi type="G" value="3588,4,"><wi type="G" value="1248,5,">al servicio</wi></wi>
<wi type="G" value="3588,6,"/><wi type="G" value="1519,7,">para</wi>
