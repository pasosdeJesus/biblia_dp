<wi type="G" value="5130,8,">de estos</wi>
<wi type="G" value="3588,9,"/>
<wi type="G" value="1646,10,"/>
<wi type="G" value="1785,7,">mandamientos</wi>,
<wi type="G" value="2532,11,">y</wi> le
